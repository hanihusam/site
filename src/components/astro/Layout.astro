---
import Head from './Head.astro'

export interface Props {
  title: string;
  description: string;

  og?: string;
}
const { title, description, og } = Astro.props;


---
<!doctype html>
<html lang="en">
  <head>
    <Head title={title} description={description} og={og} />
  </head>
  <body>
    <div class="relative flex min-h-screen flex-col bg-light dark:bg-dark">
      <slot />
    </div>
  </body>
</html>