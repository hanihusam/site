---
import Footer from "./Footer.astro";
import Head from "./Head.astro";
import Spacer from "./Spacer.astro";

export interface Props {
  title: string;
  description: string;

  og?: string;
}
const { title, description, og } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={title} description={description} og={og} />
  </head>
  <body>
    <div
      class="relative flex min-h-screen flex-col bg-neutral-100 dark:bg-neutral-800"
    >
      <slot />
      <Spacer size="lg" />
      <Footer />
    </div>
  </body>
</html>
